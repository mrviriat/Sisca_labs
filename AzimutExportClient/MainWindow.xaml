<Window x:Class="AzimutExportClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AzimutExportClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="Gray" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Grid Grid.Column="0" Margin="15,5,0,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                
                <StackPanel 
                    Grid.Row="0" 
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
                    <TextBlock VerticalAlignment="Center" FontSize="20" Margin="0, 5, 0, 0">
                        Номер рейса:
                    </TextBlock>
                    <TextBox 
                        VerticalAlignment="Bottom"
                        FontSize="18"
                        Width="120"
                        VerticalContentAlignment="Center"
                        Margin="10, 0, 0, 0"/>
                </StackPanel>
                
                <StackPanel 
                    Grid.Row="1" 
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"      >
                    <TextBlock VerticalAlignment="Center" FontSize="20" Margin="0, 5, 0, 0">
                        Номер смены:
                    </TextBlock>
                    <TextBox 
                        FontSize="18"
                        Width="120"
                        VerticalContentAlignment="Center"
                        VerticalAlignment="Bottom"
                        Margin="10, 0, 0, 0"/>
                </StackPanel>
                
                <StackPanel 
                    Grid.Row="2" 
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
                    <TextBlock VerticalAlignment="Center" FontSize="20" Margin="0, 5, 0, 0">
                        Путь к файлу с расписанием:
                    </TextBlock>
                    <TextBox 
                        FontSize="18"
                        Width="120"
                        VerticalContentAlignment="Center"
                        VerticalAlignment="Bottom"
                        Margin="10, 0, 0, 0"/>
                </StackPanel>
                
