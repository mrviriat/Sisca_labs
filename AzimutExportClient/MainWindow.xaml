        </Grid>

        <Grid Grid.Row="1" Opacity="0.6" IsHitTestVisible="False">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Background="Red">

                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>


                <ListBox
                    Grid.Row="0"
                    Name="routesForBuildingTemplate"
                    Background="Aquamarine"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Margin="15,5,5,5">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Background="Red"
                                    Text="{Binding WPT_ID}"
                                    Margin="5" />
                                <TextBlock
                                    Background="Red"
                                    Text="{Binding WPT_NAME}"
                                    Margin="5" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>


                <Grid
                    Grid.Row="1"
                    Background="Orange"
                    Margin="0 5 0 5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <TextBox
                        Grid.Column="0"
                        Margin="15 0 5 0" 
                        VerticalContentAlignment="Center"
                        />
                    <Button
                        Grid.Column="1"
                        FontSize="20"
                        Content="Добавить"
                        Padding="0, 5, 0, 5"
                        Margin="5 0 5 0" />
                </Grid>
            </Grid>

            <Grid Grid.Column="1" Background="SandyBrown">
                <ListBox
                    Name="allRoutesFromDataBase"
                    Background="CadetBlue"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Margin="5,5,15,5">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Background="Red"
                                    Text="{Binding WPT_ID}"
                                    Margin="5" />
                                <TextBlock
                                    Background="Red"
                                    Text="{Binding WPT_NAME}"
                                    Margin="5" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
            
        </Grid>

    </Grid>

</Window>